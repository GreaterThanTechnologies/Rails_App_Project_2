<%=render(partial: "application/errors", locals: {errors: @measurement.errors.full_messages})%>
<%if @item%>
  <h3><%=@item.name%></h3>
<%end%>
 
<%= form_for(@inventory) do |f| %>
  <%= f.label "Quantity" %>
  <%= f.number_field(:quantity) %>
  <%= f.label "Units" %>
  <%= f.text_field(:unit) %>
  <%= f.submit("Save") %>
<% end %>