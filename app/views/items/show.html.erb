  <% end %>
<h4 class="center"><%= link_to "Edit Item", edit_item_path(@item) %></h4><br/><br/>
<h4 class="center">

<h4><%= button_to("Delete", @item, method: :delete, data: { confirm: "Really? Do You Want to Do This?" }) %></h4>
 
