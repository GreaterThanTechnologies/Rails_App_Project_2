<h1> Good Day! <%= current_owner.fname %></h1>
<% if params[:owner_id] %>
  <h3>Below are the items & inventory in your store</h3><br/>
<% else %>
    <h3>Below are the items & inventory you're looking for</h3><br/>
 <% end %>

<% @items.each do |item| %>
  <h3 class="center"><%= link_to(item.name, item_path(item)) %></> </h3>
    <h4 class="center"><% item.inventories.each do |q| %></h4>
      <% if q.owner == @owner %>
      <h4 class="center"><%= q.quantity %> <%= q.unit %></h4>
      <% elsif q.owner == nil %>
      <h4 class="center"><%= q.quantity %> <%= q.unit %></h4> 
      <% binding.pry %>
    <% end %>
  <% end %>
<% end %>
 

<% if !current_owner.items.exists? %>
  <h3 class="center">You currently have no items.</h3>
<% end %>
